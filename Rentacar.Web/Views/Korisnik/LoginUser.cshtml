@model Rentacar.Web.ViewModels.LoginVM;

@{
    ViewData["Title"] = "Prijava korisnika";
}
    <div class="row">
        <div class="col-md-4">
            @if (Model != null && Model.novoRegistrovan)
            {
                <div class="label label-success">Uspješno ste se registrovali, prijavite se na sistem</div>
            }
            <h2>@ViewBag.Title</h2>
            <form asp-action="LoginUser">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="label label-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="label label-warning"></span>
                </div>
                <input type="submit" class="btn btn-default" value="Login" />
            </form>
        </div>
    </div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}